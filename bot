import discord

client = discord.Client()

@client.event
async def on_message(message):
    message.content.lower()
    if message.author == client.user:
        return
    if message.content.startswith("twitch1"):
        await message.channel.send("BenPhillipsUK is LIVE on twitch click here: https://www.twitch.tv/benphillipsuk")
    if message.author == client.user:
        return
    if message.content.startswith("twitch2"):
